{
    "manifest_version": 2,

    "name": "Optimize AB Selector",
    "description": "This is a chrome extension, allows you to select a variants of the Google Optimize.",
    "version": "0.1.0",

    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js"],
        "persistent": false
    },

    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": [
      "cookies",
      "tabs",
      "http://*/*",
      "https://*/*"
    ]
}
